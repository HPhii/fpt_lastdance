<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Dialog
        id="columnSettingsDialog"
        title="{i18n>dialogSettingsTitle}"
        contentWidth="400px"
        contentHeight="500px"
    >
        <content>
            <VBox class="sapUiSmallMargin">
                <Label
                    text="{i18n>dialogDescription}"
                    class="sapUiTinyMarginBottom sapUiTextBold"
                />
                <List
                    id="columnList"
                    mode="MultiSelect"
                    includeItemInSelection="true"
                >
                    <items>
                        <StandardListItem
                            title="{i18n>columnTaskName}"
                            type="Active"
                            selected="{worklistView>/columns/taskName}"
                        />
                        <StandardListItem
                            title="{i18n>columnTaskId}"
                            type="Active"
                            selected="{worklistView>/columns/taskID}"
                        />
                        <StandardListItem
                            title="{i18n>columnTaskWorkItemId}"
                            type="Active"
                            selected="{worklistView>/columns/workItemID}"
                        />
                        <StandardListItem
                            title="{i18n>columnTaskCreationDate}"
                            type="Active"
                            selected="{worklistView>/columns/creationDate}"
                        />
                        <StandardListItem
                            title="{i18n>columnTaskEndDate}"
                            type="Active"
                            selected="{worklistView>/columns/endDate}"
                        />
                        <StandardListItem
                            title="{i18n>columnTaskDaysToDeadline}"
                            type="Active"
                            selected="{worklistView>/columns/daysToDeadline}"
                        />
                        <StandardListItem
                            title="{i18n>columnTaskStatus}"
                            type="Active"
                            selected="{worklistView>/columns/status}"
                        />
                        <StandardListItem
                            title="{i18n>columnTaskPriority}"
                            type="Active"
                            selected="{worklistView>/columns/priority}"
                        />
                        <StandardListItem
                            title="{i18n>columnTaskAssignedUser}"
                            type="Active"
                            selected="{worklistView>/columns/assignedUser}"
                        />
                        <StandardListItem
                            title="{i18n>columnTaskAssignedUserName}"
                            type="Active"
                            selected="{worklistView>/columns/assignedUserName}"
                        />
                    </items>
                </List>
            </VBox>
        </content>
        <beginButton>
            <Button
                text="{i18n>dialogResetButton}"
                press=".onResetColumns"
                type="Default"
            />
        </beginButton>
        <endButton>
            <Button
                text="{i18n>dialogCloseButton}"
                press=".onCloseColumnSettings"
                type="Emphasized"
            />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
