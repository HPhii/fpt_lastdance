<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
>
    <Dialog
        id="userSearchHelpDialog"
        title="{i18n>userSearchHelpTitle}"
        contentWidth="400px"
        contentHeight="550px"
        beforeOpen=".onAfterOpenUserSearchHelp"
        busy="{userInfoList>/busy}"
    >
        <content>
            <List
                noDataText="{i18n>userSearchHelpNoData}"
                items="{path: 'userInfoList>/users'}"
            >
                <items>
                    <StandardListItem
                        title="{userInfoList>DisplayName}"
                        description="{userInfoList>Company}"
                        info="{userInfoList>UniqueName}"
                        type="Active"
                        press=".onSelectUser"
                    />
                </items>
            </List>
        </content>
        <endButton>
            <Button
                text="{i18n>btnCancel}"
                press=".onCloseUserSearchHelp"
            />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
