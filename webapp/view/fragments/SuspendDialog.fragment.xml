<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Dialog
        id="suspendDialog"
        title="{i18n>suspendDialogTitle}"
        contentWidth="400px"
    >
        <content>
            <VBox class="sapUiSmallMargin">
                <!-- Date Picker -->
                <Label
                    text="{i18n>suspendDateLabel}"
                    labelFor="suspendDatePicker"
                    required="true"
                />
                <DatePicker
                    id="suspendDatePicker"
                    placeholder="{i18n>suspendDatePlaceholder}"
                    minDate="{
                        path: 'detailView>/today',
                        type: 'sap.ui.model.type.Date'
                    }"
                    valueFormat="yyyy-MM-dd"
                    displayFormat="dd.MM.yyyy"
                    change=".onSuspendDateChange"
                />

                <!-- Time Picker -->
                <Label
                    text="{i18n>suspendTimeLabel}"
                    labelFor="suspendTimePicker"
                    required="true"
                    class="sapUiSmallMarginTop"
                />
                <TimePicker
                    id="suspendTimePicker"
                    placeholder="{i18n>suspendTimePlaceholder}"
                    valueFormat="HH:mm:ss"
                    displayFormat="HH:mm"
                />
            </VBox>
        </content>
        <beginButton>
            <Button
                text="{i18n>buttonSuspend}"
                type="Emphasized"
                press=".onConfirmSuspend"
            />
        </beginButton>
        <endButton>
            <Button
                text="{i18n>btnCancel}"
                press=".onCancelSuspend"
            />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
