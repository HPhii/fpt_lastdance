<mvc:View controllerName="z.wf.zwfmanagement.controller.Detail"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    
    <Page id="detailPage" title="{WorkItemText}" showNavButton="true" navButtonPress=".onNavBack">
        <content>
            <ObjectHeader 
                intro="{TaskText}"
                title="{WorkItemText}"
                number="{Priority}"
                numberUnit="{i18n>priority}">
                <attributes>
                    <ObjectAttribute title="{i18n>detailWorkItemID}" text="{WorkItemID}" />
                    <ObjectAttribute title="{i18n>detailUserID}" text="{UserID}" />
                    <ObjectAttribute title="{i18n>detailStatus}" text="{TechnicalStatus}" />
                </attributes>
            </ObjectHeader>
            
            <VBox class="sapUiSmallMargin">
                <Text text="{i18n>detailPlaceholder}" />
            </VBox>
        </content>

        <footer>
            <OverflowToolbar>
                <ToolbarSpacer />
                
                <HBox items="{_DecisionOptions}">
                    <Button 
                        text="{DecisionText}" 
                        type="Emphasized" 
                        press=".onDecisionPress"
                        class="sapUiTinyMarginBegin">
                        
                        <customData>
                            <core:CustomData key="DecisionKey" value="{DecisionKey}" />
                            <core:CustomData key="WorkItemID" value="{WorkItemID}" />
                        </customData>
                    </Button>
                </HBox>
            </OverflowToolbar>
        </footer>
    </Page>
</mvc:View>