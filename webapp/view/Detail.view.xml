<mvc:View controllerName="z.wf.zwfmanagement.controller.Detail"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    
    <Page id="detailPage" title="{WorkItemText}" showNavButton="true" navButtonPress=".onNavBack">
        <content>
            <ObjectHeader 
                intro="{TaskText}"
                title="{WorkItemText}"
                number="{Priority}"
                numberUnit="{i18n>priority}">
                <attributes>
                    <ObjectAttribute title="{i18n>detailWorkItemID}" text="{WorkItemID}" />
                    <ObjectAttribute title="{i18n>detailUserID}" text="{AssignedUser}" />
                    <ObjectAttribute title="{i18n>detailStatus}" text="{TechnicalStatus}" />
                </attributes>
            </ObjectHeader>
            
            <VBox class="sapUiSmallMargin">
                <Text text="{i18n>detailPlaceholder}" />
            </VBox>
        </content>

        <footer>
            <OverflowToolbar>
                <ToolbarSpacer />
                
                <HBox items="{_DecisionOptions}">
                    <Button 
                        text="{DecisionText}" 
                        type="Emphasized" 
                        press=".onDecisionPress"
                        class="sapUiTinyMarginBegin">
                        
                        <customData>
                            <core:CustomData key="DecisionKey" value="{DecisionKey}" />
                            <core:CustomData key="WorkItemID" value="{WorkItemID}" />
                        </customData>
                    </Button>
                </HBox>

                <Button 
                    text="{i18n>buttonApprove}" 
                    type="Success" 
                    icon="sap-icon://accept"
                    press=".onApproveAction"
                    visible="{__OperationControl/approve}" 
                    class="sapUiTinyMarginBegin"/>

                <Button 
                    text="{i18n>buttonReject}" 
                    type="Negative" 
                    icon="sap-icon://decline"
                    press=".onRejectAction"
                    visible="{__OperationControl/reject}" 
                    class="sapUiTinyMarginBegin"/>

                <Button 
                    text="{i18n>buttonClaim}" 
                    type="Emphasized" 
                    icon="sap-icon://user-edit"
                    press=".onClaimAction"
                    visible="{__OperationControl/claim}" 
                    class="sapUiTinyMarginBegin"/>

                <Button 
                    text="{i18n>buttonForward}" 
                    type="Default" 
                    icon="sap-icon://forward"
                    press=".onForwardAction"
                    visible="{__OperationControl/forward}" 
                    class="sapUiTinyMarginBegin"/>

                <Button 
                    text="{i18n>buttonRelease}" 
                    type="Transparent" 
                    icon="sap-icon://undo"
                    press=".onReleaseAction"
                    visible="{__OperationControl/release}" 
                    class="sapUiTinyMarginBegin"/>

                <Button 
                    text="{i18n>buttonSuspend}" 
                    type="Reject" 
                    icon="sap-icon://pause"
                    press=".onSuspendAction"
                    visible="{__OperationControl/suspend}" 
                    class="sapUiTinyMarginBegin"/>

            </OverflowToolbar>
        </footer>
    </Page>
</mvc:View>